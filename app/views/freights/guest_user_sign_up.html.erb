<div class="row">
  <div class="col-xs-12">
    <h1 class="page-title text-center">Your Frieght rates are ready!</h1>
    <p class="text-left">
      Complete your contact details below to have the best rates from our selected freight forwarders displayed - with price guarantee!
    </p>
    <p class="text-left">
      Your contact details will only be used to secure your price guarantee.
    </p>
  </div>
</div>

<div class="col-xs-4 col-xs-offset-4">
  <div class="panel seperator-25">
    <div class="panel-body">
      <%= form_for(User.new, as: :user, url: session_path(:user), html: { remote: :true}) do |f| %>
          <div class="row">
            <div class="col-xs-12">
              <div class="users-login-form">
                <div class="alert alert-danger text-center alert-dismissable failure-messages" style="display:none">
                </div>
              </div>
              <div class="form-group">
              <%= f.hidden_field :login_from_guest, :value => true %>
              <%= f.label :email %>
                <%= f.email_field :email, {placeholder: "Registered Email Address",class: "form-control"} %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                <%= f.label :password %>
                  <%= f.password_field :password, {placeholder: "Password",class: "form-control"} %>
                  
                </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>

            <div class="col-xs-6 text-right hidden">
              <a href="#" class="forgot-link" id="forgot-link">Forgot Password?</a>
            </div>
          </div>

          <div class="form-group text-center">
              <%= f.submit "Submit", {class: "btn btn-primary"} %>
          </div>
          <div class="text-center">
              <a href="#do--register">Do not have account? Register Now</a>

          </div>
      <% end %></div></p>
    <div class="panel-body" id="do--register">
      <div class="alert alert-danger text-center alert-dismissable failure-messages signup_form" style="display:none"></div>
      <%= form_for User.new, url: register_guest_user_path, html: { remote: :true} do |f| %>
          <div class="form-group">
            <%= f.text_field :company_name,{class: 'form-control', placeholder: "Company Name", required: :required} %>
          </div>
          <div class="form-group">
            <%= f.text_field :first_name,{class: 'form-control', placeholder: "First Name",required: :required} %>
          </div>
          <div class="form-group">
            <%= f.text_field :last_name,{class: 'form-control', placeholder: "Last Name",required: :required}%>
          </div>
          <div class="form-group">
            <%= f.email_field :email,{class: 'form-control', placeholder: "Email", required: :required}%>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-4">
                <%=f.select :calling_code, GlobalConstants::CALLING_CODES.map { |c| [ '+'+c.to_s, c ] },{},{class: 'form-control selecter'} %>
              </div>
              <div class="col-xs-8">
                <%= f.text_field :phone_number,{class: 'form-control', placeholder: "Phone Number",required: :required, maxlength: "10"}%>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit "SEE PRICES NOW!", {class: 'btn btn-primary btn-block'}%>
          </div>
      <% end %>
    </div>
  </div>
</div>