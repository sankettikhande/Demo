<!DOCTYPE html>
<html>
<head>
  <%= render :partial => "layouts/head"%>
</head>
<body class="air-bg">
  <%= render :partial => "layouts/header" %>
  <%= render :partial => "layouts/side_bar" %>
<!-- modals, popups are kept out of basic structure for development ease -->
  <section class="external-content">
    <div class="modal fade clean-modal" id="login-modal" data-backdrop="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <button type="button" class="close round-close" data-dismiss="modal">&times;</button>
          <div class="modal-header">
            <h4 class="modal-title">Please Sign in</h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-xs-10 col-xs-offset-1">
                <div class="login-form form-horizontal" role="form">
                  <p class="help-text lf-row text-center">Enter your registered email below, <br>we'll mail you password reset instructions !<br></p>
                  <div class="form-group">
                    <label class="col-xs-3 control-label" for="l-email">Email</label>
                    <div class="col-xs-9">
                      <input type="email" id="l-email" name="l-email" class="form-control" placeholder="Registered Email Address" required>
                    </div>
                  </div>
                  <div class="form-group lf-row">
                    <label class="col-xs-3 control-label" for="l-pswrd">Password</label>
                    <div class="col-xs-9">
                      <input type="password" id="l-pswrd" name="l-pswrd" class="form-control" placeholder="Password" required>
                    </div>
                  </div>
                  <div class="form-group lf-row">
                    <div class="col-xs-5 col-xs-offset-3">
                      <label>
                        <input type="checkbox"> Remember me
                      </label>
                    </div>
                    <div class="col-xs-4 text-right">
                      <a href="#" class="forgot-link" id="forgot-link">Forgot Password?</a>
                    </div>
                  </div>
                  <div class="form-group text-center">
                    <div class="col-xs-12">
                      <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-primary">Submit</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
              <a href="/users/sign_up"><i class="fa fa-rocket"></i> Create an account</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <%= yield %>
  <%= render partial: "layouts/footer"%>
</body>
</html>
